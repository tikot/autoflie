
@import url(http://fonts.googleapis.com/css?family=Roboto:300,400);

red = #C83D1C
red2 = #C83434
green = #5FC834
black = #212121

*,
*:before,
*:after
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box

html,
body
	height 100%
	width 100%

body
	margin 0
	padding 0
	background-color #f9f9f9
	color #212121
	font 14px 'Roboto', sans-serif;
	font-weight 400

a
	color #00B7FF

header
	background #3e50b4 //rgb(56, 56, 60)
	color white
	box-shadow 0 2px 5px rgba(0,0,0,.26)

p,
h1
	font-weight 400

.row:after
	clear both

.row:before, .row:after
	content " "
	display table

.column, .columns
	position relative
	padding-left 0.83333rem
	padding-right 0.83333rem
	float left

.dash
	background: rgb(108, 103, 103);
	border-radius: 3px;
.dash-blue
	background #2B3349
	border-radius: 3px;

.motors
	padding: 5px
	max-width: 330px;
	margin auto
	.m
		display inline-block
		span
			display block
	.thrust
		width 39px
		position relative

.control
	padding: 5px;
	margin-bottom: 10px;
	background: rgb(108, 103, 103);
	border-radius 3px
	text-align center

button
	background #FAF9F9
	border 0
	color black
	font-size 20px
	padding 10px 15px
	margin 5px
	text-align center
	text-transform uppercase
	outline none
	border-radius 3px
	box-shadow: 0 2px 5px rgba(0,0,0,0.26);
	&:hover
		background #C83434
		color white

button.active
	background-color green
	color white

#status
	float right
	margin 27px
	width: 20px
	height: 20px;
	border-radius: 50%;
	background-color red2
	&.connected
		background-color green

paper-slider
	margin 0 auto
	display block
	width 300px
	height 40px

paper-slider::shadow #sliderKnobInner
	background-color #0f9d58
	width 30px
	height 30px

paper-slider::shadow .slider-input::shadow input
	color #787878

progress
	width 100%
	background white
	height 20px

.small-2
	width 16.66667%
.small-10
	width 83.33333%
.small-12
	width 100%

.signals
	display block
	padding 5px
	padding-top 6px
	margin-top 10px
	margin-bottom: 10px;
	background: rgb(108, 103, 103);
	border-radius: 3px;


.signals label
	font-weight 300
	left: 21px;
	z-index: 100;
	position: absolute;
// .signals progress


progress::-webkit-progress-bar
	background-color #fff
	border-radius 3px

progress::-webkit-progress-value
	background green // #4684EE
	border 1px solid green
	border-radius 3px

#curent-thrust
	-webkit-transform rotate(-90deg)
	-moz-transform rotate(-90deg)
	transform rotate(-90deg)
	width: 260px;
	height: 30px;
	border-radius: 2px;
	position: absolute;
	bottom: 118px;
	left: -111px;
	&::-webkit-progress-value
		background #E57358 // #4684EE
		border 1px solid red
		border-radius 3px

#acc
	svg
		width 100%

//svg
svg text
	fill: white;

svg
	font: 10px sans-serif;

.line-x
	fill: none;
	stroke: blue;
	stroke-width: 1px;

.line-y
	fill: none;
	stroke: green;
	stroke-width: 1px;

.line-z
	fill: none;
	stroke: red;
	stroke-width: 1px;

.axis path,
.axis line
	stroke-width: 1px;
	fill: none;
	stroke: rgba(255, 255, 255, 0.36);
	shape-rendering: crispEdges;

@media only screen and (min-width: 40.063em)
	.medium-6
		width 50%
	.medium-5
		width: 41.66667%;
	.medium-7
		width: 58.33333%;
